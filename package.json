    "framer-motion": "^12.19.1",
    "lucide-react": "^0.438.0",
    "next": "^14.2.32",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "react": "^18.3.1",
